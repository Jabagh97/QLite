
@{
    var x = ViewData["TicketState"];
}

<div class="col-md-6 col-xl-12">
    <!--begin::Card-->
    <div class="card">
        <div class="card-body">
            <!--begin::Card toolbar-->
            <div class="d-flex justify-content-between align-items-center mb-5">
                <h3 class="card-title mb-0" id="TableTitle"></h3>
            </div>
            <!--end::Card toolbar-->
            <!--begin::Tabs-->
            <div class="d-flex justify-content-between text-decoration-none p-2 mb-2 border-bottom waitinglist-tabs" style="overflow-x: auto;">
    <div class="">
                    <button id="Waiting" class="btn btn-primary position-relative waiting-ticket-btn active" onclick="fetchTickets('Ticket/GetWaitingTickets', 'Waiting Tickets','WT')">
            <i class="fas fa-clock mr-1"></i> Waiting
        </button>
    </div>
    <div class="">
        <button id="Parked" class="btn btn-primary position-relative waiting-ticket-btn active" onclick="fetchTickets('Ticket/GetParkedTickets', 'Parked Tickets','PT')">
            <i class="fas fa-parking mr-1"></i> Parked
        </button>
    </div>
    <div class="">
        <button id="Transfered" class="btn btn-primary position-relative waiting-ticket-btn active" onclick="fetchTickets('Ticket/GetTransferedTickets', 'Transfered Tickets','TT')">
            <i class="fas fa-exchange-alt mr-1"></i> Transfered
        </button>
    </div>
</div>


            <!--end::Tabs-->
            <div id="kt_app_content" class="app-content flex-column-fluid" style="padding-left :0px;padding-right:0px">
