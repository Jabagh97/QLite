                                    <table id="table" class="table " style="box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
                                        <thead>
                                            <tr class="fw-semibold fs-7 text-primary border-bottom border-gray-200 py-4">
                                                <th>Ticket Number</th>
                                                <th>Service</th>
                                                <th>Segment </th>
                                                <th>Action </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- Your table body content goes here -->
                                        </tbody>
                                    </table>
                                </div>

                                <!--end::Datatable-->
                            </div>

                        </div>
                    </div>


                </div>
            </div>
        </div>
