<div class="col-md-6 col-xl-12">
    <!--begin::Card-->
    <div class="card bg-light shadow-sm">

        <div class="card-header">
            <!--begin::Card toolbar-->
            <div class="d-flex justify-content-between align-items-center mb-5">
                <h3 class="card-title mb-0" id="TableTitle">Waiting Tickets</h3>
            </div>
            <!--begin::Tabs-->
            <div class="d-flex justify-content-between text-decoration-none p-2 mb-2 border-bottom waitinglist-tabs" style="overflow-x: auto;">
                <div class="">
                    <button id="Waiting" class="btn btn-primary position-relative waiting-ticket-btn active" onclick="fetchTickets('Ticket/GetWaitingTickets', 'Waiting Tickets','WT')">
                        <i class="fas fa-clock mr-1"></i> Waiting
                    </button>
                </div>
                <div class="">
                    <button id="Parked" class="btn btn-primary position-relative waiting-ticket-btn" onclick="fetchTickets('Ticket/GetParkedTickets', 'Parked Tickets','PT')">
                        <i class="fas fa-parking mr-1"></i> Parked
                    </button>
                </div>
                <div class="">
                    <button id="Transferred" class="btn btn-primary position-relative waiting-ticket-btn" onclick="fetchTickets('Ticket/GetTransferredTickets', 'Transferred Tickets','TT')">
                        <i class="fas fa-exchange-alt mr-1"></i> Transferred
                    </button>
                </div>
            </div>
            <!--end::Tabs-->
            <!--end::Card toolbar-->
        </div>

        <div class="card-body">
            <!--begin::Datatable-->
            <div class="table-responsive">
                <table id="table" class="table" style="width:100% ; ">
                    <thead>
                        <tr class="fw-bold fs-6 text-gray-800">
                            <th>Ticket Number</th>
                            <th>Service</th>
                            <th>Segment</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="fw-bold fs-6 text-gray-800">
                        <!-- Table body content will be dynamically populated -->
                    </tbody>
                </table>
            </div>
            <!--end::Datatable-->
        </div>
    </div>
    <!--end::Card-->
</div>
