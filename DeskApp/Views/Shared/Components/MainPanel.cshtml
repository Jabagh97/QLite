@using QLite.Data;
@model TicketState

<div id="mainPanelContent">
    <div class="col-md-6 col-xl-12" style="width:100%">

        <!--begin::Card-->
        <div class="card bg-light shadow-sm">
            <div class="drag-icon"></div>

            <div class="card-header">
                <h3 class="card-title">Main Panel</h3>
                <div class="card-toolbar">
                    <ul class="nav nav-tabs">
                        
                        <li class="nav-item">
                            <button id="autoCallBtn" class="nav-link" data-toggle="tab" onclick="autocall()">
                                <i class="fas fa-phone"></i>
                                Call From Macro
                            </button>
                        </li>


                        <li class="nav-item">
                            <button class="nav-link" data-toggle="tab" onclick="GetSegmentsandServices()">
                                <i class="fas fa-plus"></i>
                                Create Ticket 
                            </button>
                        </li>
                        <li class="nav-item">
                            <button id="busyButton" class="nav-link" data-toggle="tab" onclick="SetBusyStatus()">
                                <i class="fas fa-bell"></i>
                                Busy
                            </button>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="card-body card-scroll h-200px">
                <h4>Ticket State Information</h4>
                @if (Model != null)
                {
                    <h3 id="ticketNumber" data-ticket-id="@Model.Ticket">Ticket Number : @Model.ServiceCode@Model.TicketNumber</h3>

                    <h3>Service Type  : @Model.ServiceTypeName</h3>
                    <h3>Segment       : @Model.SegmentName</h3>

                    <h3>Note          :@Model.Note </h3>


                }
                else
                {
                    <p>No ticket in progress</p>
                   
                }

            </div>
            @if (Model != null)
            {
                <div class="card-footer">
                    @*  <button class="btn btn-secondary btn-md">
                <i class="fas fa-phone"></i> Call Ticket
                </button>*@
                    <button class="btn btn-secondary btn-md" onclick="GetDeskListAndServices()">
                        <i class="fas fa-exchange-alt"></i> Transfer Ticket
                    </button>

                    <button class="btn btn-secondary btn-md" onclick="showParkTicketModal()">
                        <i class="fas fa-parking"></i> Park Ticket
                    </button>

                    <button class="btn btn-secondary btn-md" onclick="EndTicket()">
                        <i class="fas fa-times"></i> End Ticket
                    </button>
                    @*  <button class="btn btn-secondary btn-md">
                <i class="fas fa-pause"></i> Pause/Hold Ticket
                </button>*@
                </div>
            }
        </div>
        <!--end::Card-->
    </div>
</div>





<script>
    function enableCreateTicketButton() {
        var serviceDropdown = document.getElementById("createServiceDropdown");
        var segmentDropdown = document.getElementById("segmentDropdown");
        var createTicketButton = document.getElementById("createTicketButton");

        // Enable the button if both dropdowns have selected values
        if (serviceDropdown.value && segmentDropdown.value) {
            createTicketButton.disabled = false;
        } else {
            createTicketButton.disabled = true;
        }
    }

     function enableTransferTicketButton() {
        var deskDropdown = document.getElementById("deskDropdown");
        var serviceDropdown = document.getElementById("serviceDropdown");
        var transferTicketButton = document.getElementById("transferTicketButton");

        // Enable the button if both dropdowns have selected values
        if (deskDropdown.value && serviceDropdown.value) {
            transferTicketButton.disabled = false;
        } else {
            transferTicketButton.disabled = true;
        }
    }
</script>



