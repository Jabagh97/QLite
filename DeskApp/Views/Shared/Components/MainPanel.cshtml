@using QLite.Data;
@model TicketState

<div id="mainPanelContent">
    <div class="col-md-6 col-xl-12">

        <!--begin::Card-->
        <div class="card bg-light shadow-sm">
            <div class="drag-icon"></div>

            <div class="card-header">
                <h3 class="card-title">Main Panel</h3>
                <div class="card-toolbar">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <button id="autoCallBtn" class="nav-link" data-toggle="tab" onclick="autocall()">
                                <i class="fas fa-phone"></i>
                                Call From Macro
                            </button>
                        </li>


                        <li class="nav-item">
                            <button class="nav-link" data-toggle="tab" disabled>
                                <i class="fas fa-plus"></i>
                                Create Ticket (Coming Soon)
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-toggle="tab" disabled>
                                <i class="fas fa-bell"></i>
                                Busy (Coming Soon)
                            </button>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="card-body card-scroll h-200px">
                <h4>Ticket State Information</h4>
                @if (Model != null)
                {
                    <h3 id="ticketNumber" data-ticket-id="@Model.Ticket">Ticket Number : @Model.ServiceCode@Model.TicketNumber</h3>

                    <h3>Service Type  : @Model.ServiceTypeName</h3>
                    <h3>Segment       : @Model.SegmentName</h3>

                    <h3>Note          :@Model.Note </h3>


                }
                else
                {
                    <p>No ticket in progress</p>
                }

            </div>
            @if (Model != null)
            {
                <div class="card-footer">
                    @*  <button class="btn btn-secondary btn-md">
                <i class="fas fa-phone"></i> Call Ticket
                </button>*@
                    <button class="btn btn-secondary btn-md" onclick="GetDeskListAndServices()">
                        <i class="fas fa-exchange-alt"></i> Transfer Ticket
                    </button>

                    <button class="btn btn-secondary btn-md" onclick="showParkTicketModal()">
                        <i class="fas fa-parking"></i> Park Ticket
                    </button>

                    <button class="btn btn-secondary btn-md" onclick="EndTicket()">
                        <i class="fas fa-times"></i> End Ticket
                    </button>
                    @*  <button class="btn btn-secondary btn-md">
                <i class="fas fa-pause"></i> Pause/Hold Ticket
                </button>*@
                </div>
            }
        </div>
        <!--end::Card-->
    </div>
</div>

<!--Park Modal -->
<div class="modal" id="parkTicketModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Park Ticket</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" id="ticketNote" class="form-control" placeholder="Enter Note">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="ParkTicket()">OK</button>
            </div>
        </div>
    </div>
</div>

<!--Transfer Modal -->
<div class="modal" id="transferTicketModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Transfer Ticket</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label>Transfer to :</label>
                <select id="deskDropdown" class="form-control">
                    <!-- Dropdown options will be added dynamically here -->
                </select>

                <label>Service :</label>
                <select id="serviceDropdown" class="form-control">
                    <!-- Dropdown options will be added dynamically here -->
                </select>
                <label>Note :</label>

                <input type="text" id="ticketNote" class="form-control" placeholder="Enter Note">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="TransferTicket()">OK</button>
            </div>
        </div>
    </div>
</div>

